<html>

<head>
    <title>ShareShield Password Reset</title>
    <HTA:APPLICATION ID='Info'
                     SingleInstance='Yes'
                     SysMenu='No'
                     MaximizeButton='No'
                     MinimizeButton='No'
                     CloseButton='Yes'
                     SCROLLFLAT='No'
                     SCROLL='No'
                     Border='dialog'
                     BORDERSTYLE='simple'
                     INNERBORDER='No'
                     Caption='Yes'
                     WindowState='Normal'
                     APPLICATIONNAME='ShareShield Password Reset'
                     Icon='https://app.shareshield.net/favicon.ico'>

    <style>
        body {
            font-family: Calibri;
            background: rgb(242, 242, 242);
            margin: 0;
        }

        h3 {
            color: rgb(42, 160, 105);
        }

        table {
            margin: 0 auto;
        }

        button {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 4px 6px;
            text-align: center;
            text-decoration: none;
            font-size: 12px;
            cursor: pointer;
        }
    </style>
</head>

<script type="text/javascript">
    // Set the window size to 410x200 pixels
    window.resizeTo(410, 220);

    window.onload = function () {
        var linkParameter = getParameterByName("link");
        var linkElement = document.getElementById("link");
        linkElement.innerHTML = "<a>" + linkParameter + "</a>";
    };

    function getParameterByName(name) {
        var url = window.location.href;
        name = name.replace(/[\[\]]/g, "\\$&");
        var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
            results = regex.exec(url);
        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, " "));
    }

    function copyLink() {
        // IE9 compatible copy to clipboard
        var linkElement = document.getElementById("link");
        window.clipboardData.setData("Text", linkElement.innerText);
        closeWindow();
    }

    function closeWindow() {
        window.close();
    }
</script>

<body>
    <center>
        <div>
            <img src="https://app.shareshield.net/android-chrome-192x192.png" height="24px" width="auto" alt="ShareShield Logo" />
            <h3>Password link generated!</h3>
        </div>
        <table>
            <tr>
                <td>
                    <p id="link"></p> <!-- Placeholder for the link parameter -->
                </td>
            </tr>
            <tr><td><br></td></tr>
            <tr>
                <td style="text-align: center;">
                    <button onclick="copyLink()">Copy and close</button>
                </td>
            </tr>
        </table>
    </center>
</body>

</html>